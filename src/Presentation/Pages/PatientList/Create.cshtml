@page
@model Presentation.Pages.PatientList.CreateModel
@{
    ViewData["Title"] = "Create Patient";
}

<br/>
<h2 class="text-info">Add a new Patient</h2>
<br/>
<div class="border rounded container col-6" style="padding:30px;">
    <form method="post" enctype="multipart/form-data">
        <div class="form-group row ">
            <div class="col-3">
                <label class="font-weight-bold" asp-for="Patient.FirstName"></label>
            </div>
            <div class="col-9">
                <input asp-for="Patient.FirstName" class="form-control"/>
                <span class="text-danger" asp-validation-for="Patient.FirstName"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label class="font-weight-bold" asp-for="Patient.LastName"></label>
            </div>
            <div class="col-9">
                <input asp-for="Patient.LastName" class="form-control"/>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label class="font-weight-bold" asp-for="Patient.BirthDate"></label>
            </div>
            <div class="col-9">
                <input asp-for="Patient.BirthDate" type="date" asp-format="{0:yyyy-MM-dd}" class="form-control"/>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label class="font-weight-bold" asp-for="Patient.NextAppointment"></label>
            </div>
            <div class="col-9">
                <input asp-for="Patient.NextAppointment" type="date" asp-format="{0:yyyy-MM-dd}" class="form-control"/>
            </div>
        </div>
        <hr/>
        <div class="form-group row">
            <div class="col-10">
                <input type="file" name="files" id="files" capture="camera" accept="image/*" multiple>
            </div>
        </div>
        <hr/>

        <div class="form-group row">
            <div class="col-6">
                <button class="btn btn-primary form-control" type="submit">Create</button>
            </div>
            <div class="col-6">
                <a asp-page="Index" class="btn btn-secondary form-control"> Cancel</a>
            </div>
        </div>
    </form>
</div>