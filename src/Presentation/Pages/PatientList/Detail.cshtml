@page
@model Presentation.Pages.PatientList.DetailModel
@{
      
}



<div class="card">
    <div class="card-header">
    @Model.PatientResponseDetails.GetPatientFullName()
    </div>
    <div class="card-body">
    <h5 class="card-title"> @Model.PatientResponseDetails.FirstName </h5>
    <p class="card-text">@Model.PatientResponseDetails.Age</p>    
     <a asp-page="Index" class="btn btn-primary form-control text-white">List Patient</a>
    </div>
    </div>

@{
    @if (@Model.DocumentResponses.Count() == 0)
    {
        <div>No documents attached to the @Model.PatientResponseDetails.FirstName</div>
    }   
   
        <div class="image-gallery">
            @foreach (var image in Model.DocumentResponses)
            {
                <a href="@image.PatientDocumentbase64" target="_blank">
                    <img src="data:image/jpeg;base64,@image.PatientDocumentbase64" alt="Image" class="thumbnail" height="300" width="300">
                </a>
            }
        </div>
   
}

