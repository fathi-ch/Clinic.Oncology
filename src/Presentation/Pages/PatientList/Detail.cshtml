@page
@model DetailModel
@{ ViewData["Title"] = "Patient Detail"; }
<div class="card">
    <div class="card-header">
        @Model.PatientDocsResponse.Patient.GetPatientFullName()
    </div>
    <div class="card-body">
        <h5 class="card-title"> Patient Name: @Model.PatientDocsResponse.Patient.FirstName </h5>
        <p class="card-text"> Patient Age: @Model.PatientDocsResponse.Patient.Age</p>
        <a asp-page="Index" class="btn btn-primary form-control text-white"> Back to List Patient</a>
    </div>
</div>

@{
    @if (Model.PatientDocsResponse != null)
    {
        <div class="image-gallery">
            @foreach (var image in Model.PatientDocsResponse.Documents)
            {
                <a href="@image.PatientDocumentbase64" target="_blank">
                    <img src="data:image/jpeg;base64,@image.PatientDocumentbase64" alt="Image" class="thumbnail" height="300" width="300">
                </a>
            }
        </div>
    }
    else
    {
        <div>No documents attached to the @Model.PatientDocsResponse.Patient.FirstName</div>
    }
}